<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/dummy_gits" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_poster"
            android:text="Ghost in the Shell"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_movie_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_name"
            android:layout_below="@id/tv_movie_name"
            android:text="(Mystery , Crime , Live-action)"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_info"
            android:layout_below="@id/tv_movie_info"
            android:layout_marginTop="8dp"
            android:text="Current Popularity"
            android:textColor="@color/primary_text" />

        <RatingBar
            android:id="@+id/rb_stars_movie"
            style="?attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_popular"
            android:layout_below="@id/tv_popular"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5" />

        <Button
            android:id="@+id/btn_movie_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_poster"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/iv_poster"
            android:background="@drawable/roundedbutton"
            android:foreground="@drawable/ripple_white"
            android:text="Movie Review"
            android:textAllCaps="false"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/tv_movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favorite_amber_36dp"
            android:gravity="center"
            android:text="4.5"
            android:textColor="@color/icons"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/btn_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_poster"
            android:layout_alignRight="@id/iv_poster"
            android:padding="4dp"
            android:src="@drawable/ic_fullscreen_white_30dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
