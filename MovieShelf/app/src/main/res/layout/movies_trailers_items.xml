<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/iv_movie_trailer"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:background="#000"
            android:scaleType="fitCenter"
            android:src="@drawable/coco_dummy_trailer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.8"
            android:src="@drawable/ic_play_circle_outline_white_100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_movie_trailer"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="Official Trailer"
            android:textColor="@color/full_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_movie_trailer"
            android:layout_alignLeft="@id/iv_movie_trailer"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Trailer"
            android:textColor="@color/full_white" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
